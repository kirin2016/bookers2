<div class="col-md-3">
  <h2>User info</h2>
    <table class="table">
      <tbody>
        <tr><%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <%= link_to "", edit_user_path(user), class: 'fas fa-user-cog btn btn-outline-secondary btn-block' %>
    </div>

    <h2 class="mt-3">New book</h2>
    <div class="form-group">
      <%= form_with model: book, local:true do |f| %>
        <label for="book_title">Title</label>
        <div class="field"><%= f.text_field :title, class: "form-control" %></div>
        <label for="book_body">Opinion</label>
        <div class="field"><%= f.text_area :body, class: "form-control" %></div>
        <%= f.submit 'Create Book',class:"btn btn-success" %>
      <% end %>
    </div>

  </div>