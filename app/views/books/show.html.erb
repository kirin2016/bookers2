<div class="container px-5 px-sm-0">
  <div class="row">

  <%= render 'books/sidebar', user: @book_detail.user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">

        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book_detail.user) do %>
                  <%= attachment_image_tag @book_detail.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %><br>
                  <%= @book_detail.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book_detail.title, book_path(@book_detail) %></td>
              <td><%= @book_detail.body %></td>
              <% if @book_detail.user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book_detail), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', book_path(@book_detail), method: :delete, class:"btn btn-sm btn-danger" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>